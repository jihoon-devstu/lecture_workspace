<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper SYSTEM "mybatis-3-mapper.dtd">
<mapper namespace="Member">
	
	<!-- 아이디를 이용하여 회원 정보 가져오기 -->
	<select id="selectById" resultType="Member" parameterType="String">
		select *from member where id = #{id}
	</select>

	<!-- 가입 -->
	<insert id="insert">
		insert into member(sns_provider_id,id,salt,password,name,email) 
		values (#{snsProvider.sns_provider_id},#{id},#{salt},#{password},#{name},#{email})
	</insert>
	
	<!-- 이메일을 이용한 회원정보 가져오기 (salt 가져오기 위해) -->
	<select id="selectByEmail" parameterType="String" resultType="Member">
		select *from member where email = #{email}
	</select>
	
	<!-- 로그인 -->
	<select id="login" parameterType="Member" resultType="Member">
		select *from member where email = #{email} and password = #{password}
	</select>

</mapper>